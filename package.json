{
    "name": "player",
    "private": true,
    "version": "0.0.1",
    "main": "dist-electron/index.js",
    "scripts": {
        "dev": "vite",
        "build": "rimraf dist-electron && vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "crypto-js": "^4.1.1",
        "electron-window-state": "^5.0.3",
        "element-plus": "^2.4.2",
        "howler": "^2.2.4",
        "lodash": "^4.17.21",
        "mitt": "^3.0.1",
        "node-forge": "^1.3.1",
        "normalize.css": "^8.0.1",
        "pinia": "^2.1.7",
        "qs": "^6.11.2",
        "vue": "^3.3.11",
        "vue-router": "^4.2.5",
        "vue3-lazyload": "^0.3.8"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.1.1",
        "@types/howler": "^2.2.11",
        "@types/node": "^20.9.2",
        "@types/node-forge": "^1.3.11",
        "@types/qs": "^6.9.11",
        "@vitejs/plugin-vue": "^4.5.2",
        "electron": "^26.2.2",
        "electron-builder": "^24.6.4",
        "electron-devtools-installer": "^3.2.0",
        "rimraf": "^5.0.5",
        "sass": "^1.69.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.15.4",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vue-tsc": "^1.8.25"
    },
    "build": {
        "appId": "com.electron.desktop",
        "productName": "player",
        "asar": true,
        "copyright": "Copyright © 2022 electron",
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "./dist",
            "./package.json",
            "./dist-electron"
        ],
        "mac": {
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false,
            "createDesktopShortcut": true
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://127.0.0.1:8080"
            }
        ],
        "releaseInfo": {
            "releaseNotes": "基础功能"
        }
    }
}
